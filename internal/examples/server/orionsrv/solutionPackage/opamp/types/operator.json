{
  "name": "operator",
  "allowLayering": true,
  "allowedLevels": [
    "localUser",
    "tenant",
    "globalUser",
    "account",
    "solution"
  ],
  "idGeneration": {
    "generateRandomId": false,
    "idGenerationMechanism": "{{object.name}}",
    "enforceGlobalUniqueness": false
  },
  "jsonSchema": {
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "OPAMP Operator Schema",
    "description": "The schema comprises the entire JSON document.",
    "required": [
      "apiVersion",
      "kind",
      "metadata",
      "spec"
    ],
    "properties": {
      "apiVersion": {
        "type": "string",
        "default": "",
        "title": "The apiVersion Schema",
        "examples": [
          "opentelemetry.io/v1alpha1"
        ]
      },
      "kind": {
        "type": "string",
        "default": "",
        "title": "The kind Schema",
        "examples": [
          "OpenTelemetryCollector"
        ]
      },
      "metadata": {
        "type": "object",
        "default": {},
        "title": "The metadata Schema",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "default": "",
            "title": "The name Schema",
            "examples": [
              "simplest"
            ]
          }
        }
      },
      "spec": {
        "type": "object",
        "default": {},
        "title": "The spec Schema",
        "required": [
          "config"
        ],
        "properties": {
          "config": {
            "type": "string",
            "default": "",
            "title": "The config Schema"
          }
        }
      }
    },
    "additionalProperties": false
  }
}
